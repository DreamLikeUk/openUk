<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <property name="connection.url">jdbc:mysql://localhost:3306/openUk</property>
        <property name="hibernate.bytecode.use_reflection_optimizer">false</property>
        <property name="connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="connection.username">root</property>
        <property name="connection.password">root</property>
        <property name="show_sql">false</property>
        <property name="dialect">org.hibernate.dialect.MySQL5Dialect</property>


        <mapping class="com.dream.like.uk.domain.entities.UserEntity"/>
        <mapping class="com.dream.like.uk.domain.entities.RoleEntity"/>
        <mapping class="com.dream.like.uk.domain.entities.PermissionEntity"/>
        <mapping class="com.dream.like.uk.domain.entities.RankEntity"/>
        <mapping class="com.dream.like.uk.domain.entities.CategoryEntity"/>
        <mapping class="com.dream.like.uk.domain.entities.QuestionEntity"/>
        <mapping class="com.dream.like.uk.domain.entities.UserQuestionEntity"/>
        <mapping class="com.dream.like.uk.domain.entities.BadgeEntity"/>
        <mapping class="com.dream.like.uk.domain.entities.UserBadgeEntity"/>
        <mapping class="com.dream.like.uk.domain.entities.AnswerEntity"/>
    </session-factory>
</hibernate-configuration>